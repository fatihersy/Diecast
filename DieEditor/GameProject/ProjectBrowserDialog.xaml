<Window x:Class="DieEditor.GameProject.ProjectBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DieEditor.GameProject"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Project Browser" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <ToggleButton x:Name="OpenProjectButton"
                IsChecked="True" Click="ToggleProjectButton_Click" Content="New Project"  Margin="5, 1" Width="100" />
            <ToggleButton x:Name="NewProjectButton"
                IsChecked="False" Click="ToggleProjectButton_Click" Content="Open Project" Margin="5, 1" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" x:Name="browserContent">
            <local:NewProjectView/>
            <local:OpenProjectView/>
        </StackPanel>
    </Grid>
</Window>
