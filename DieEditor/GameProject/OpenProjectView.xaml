<UserControl x:Class="DieEditor.GameProject.OpenProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DieEditor.GameProject"
             mc:Ignorable="d" Width="800" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.DataContext>
		<local:OpenProject/>
	</UserControl.DataContext>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

		<ListBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Projects}" x:Name="projectsListBox"
				 SelectedIndex="0"
                 Background="DarkGray" 
                 Foreground="White" 
                 FontSize="16">
			<ListBox.ItemContainerStyle>
				<Style TargetType="ListBoxItem">
					<EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
				</Style>
			</ListBox.ItemContainerStyle>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal" Margin="5">
						<Image Source="{Binding Icon}" Width="32" Height="32" Margin="0,0,10,0"/>
						<TextBlock Text="{Binding ProjectName}" VerticalAlignment="Center"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
			
		</ListBox>

		<Grid Grid.Row="0" Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Grid.Column="1" 
                Margin="5,0,0,0" 
                BorderBrush="Gray" 
                BorderThickness="1">
				<Image Source="{Binding SelectedItem.Screenshot, ElementName=projectsListBox}" 
                       Stretch="Uniform"/>
			</Border>
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="1"
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,10">

            <Button x:Name="OpenProjectButton"
                IsDefault="True" 
                Click="OpenButton_Click" 
                Content="Open" 
                Width="100" 
                Height="30" 
                Margin="5,0"/>

            <Button x:Name="NewProjectButton"
                IsCancel="True" 
                Click="CancelButton_Click" 
                Content="Cancel" 
                Width="100" 
                Height="30" 
                Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
