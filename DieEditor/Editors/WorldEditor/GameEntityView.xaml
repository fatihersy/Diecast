<UserControl x:Class="DieEditor.Editors.GameEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DieEditor.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
		<ScrollViewer.Style>
			<Style TargetType="ScrollViewer">
				<Style.Triggers>
					<Trigger Property="DataContext" Value="{x:Null}">
						<Setter Property="Visibility" Value="Collapsed"/>
					</Trigger>
				</Style.Triggers>
			</Style>
		</ScrollViewer.Style>
		<StackPanel>
			<Border Height="32">
				<ToggleButton x:Name="addComponent"
						  IsChecked="True" 
						  HorizontalAlignment="Left" 
						  VerticalAlignment="Center" 
						  Margin="5,0"
			>
					<ToggleButton.Content>
						<DockPanel>
							<TextBlock Text="Components" Margin="5,0"/>
							<Path Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z" 
							  HorizontalAlignment="Center"
							  VerticalAlignment="Center"
							  Fill="Black" 
							  Margin="5,0"
						/>

						</DockPanel>
					</ToggleButton.Content>
				</ToggleButton>
			</Border>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="96"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="96"/>
				</Grid.ColumnDefinitions>

				<TextBlock Text="Name" 
					   Grid.Column="0"
					   Margin="5"
					   HorizontalAlignment = "Center"
					   VerticalAlignment = "Center"
			/>
				<TextBox Text="{Binding Name, UpdateSourceTrigger=Explicit}"
						 GotKeyboardFocus="OnNameTextBox_KBFocus_Got"
						 LostKeyboardFocus="OnNameTextBox_KBFocus_Lost"
					   Grid.Column="1"
					   Margin="5"
					   HorizontalAlignment = "Stretch"
					   VerticalAlignment = "Center"
			/>
				<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
					<TextBlock Text="Enabled" 
						Margin="5"
						Grid.Column="1"
				/>
					<CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}" Click="OnIsEnabledCheckBox_Click"
						  VerticalAlignment="Center" 
						  Margin="5" 
				/>
				</StackPanel>
			</Grid>
			<ItemsControl ItemsSource="{Binding Components}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</StackPanel>
	</ScrollViewer>
</UserControl>
